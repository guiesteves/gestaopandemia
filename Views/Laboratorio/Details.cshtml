@model CVC19.ViewModel.LaboratorioViewModel

@{
    ViewData["Title"] = "Laboratório - Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title text-secondary">Laboratório</h4>
        <div class="col-md-12 mt-4"><hr /></div>
        <dl class="row">
            <dt class="col-sm-2 text-secondary">
                @Html.DisplayNameFor(model => model.LaboratorioId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LaboratorioId)
            </dd>
            <dt class="col-sm-2 text-secondary">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2 text-secondary">
                @Html.DisplayNameFor(model => model.PaisId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NomePais)
            </dd>
        </dl>
        <div class="col-sm text-end">
            <a asp-action="Edit" asp-route-id="@Model.LaboratorioId"><i class="bi bi-pencil-square text-primary" style="font-size: 2rem" title="Editar"></i></a>
            <a asp-action="Index"><i class="bi bi-arrow-left-square" style="font-size: 2rem" title="Voltar"></i></a>
        </div>
    </div>
</div>
