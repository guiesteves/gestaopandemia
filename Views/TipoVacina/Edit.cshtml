@model CVC19.ViewModel.TipoVacinaViewModel

@{
    ViewData["Title"] = "Tipo de Vacina - Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title text-secondary">Tipo de Vacina</h4>
        <div class="col-md-12 mt-4"><hr /></div>
        <form id="myform" asp-action="Edit" class="row g-3 mt-4">
            <div class="text-danger col-md-12" asp-validation-summary="ModelOnly"></div>
            <div class="form-floating col-auto">
                <input asp-for="TipoVacinaId" class="form-control" size="2" disabled placeholder="#"/>
                <input type="hidden" asp-for="TipoVacinaId" />
                <label asp-for="TipoVacinaId" class="h6"></label>
                <span asp-validation-for="TipoVacinaId" class="text-danger"></span>
            </div>
            <div class="form-floating col-auto">
                <input asp-for="Nome" class="form-control" size="30" placeholder="#" />
                <label asp-for="Nome" class="h6"></label>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-floating col-auto">
                <input asp-for="Descricao" class="form-control" size="240" placeholder="#"/>
                <label asp-for="Descricao" class="h6"></label>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="col-sm text-end">
                <a href="#" onclick="$('#myform').submit()"><i class="bi bi-save2" style="font-size: 2rem" title="Atualizar"></i></a>
                <a asp-action="Index"><i class="bi bi-arrow-left-square" style="font-size: 2rem" title="Voltar"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
