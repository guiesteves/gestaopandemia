@model CVC19.ViewModel.VarianteAgentePatogenicoViewModel
@{
    <div class="modal fade" id="divVarianteAgentePatogenico" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="divVarianteAgentePatogenicoLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title text-secondary">Variante Agente Patogênico</h4>
                            <div class="col-md-12 mt-4"><hr /></div>
                            <form id="formModal">
                                <div class="text-danger col-md-12" asp-validation-summary="ModelOnly"></div>
                                <div class="form-floating col-12 mb-3">
                                    <input type="hidden" id="posicaoGrid" value="-1" />
                                    <input asp-for="VarianteAgentePatogenicoId" hidden />
                                    <input asp-for="AgentePatogenicoId" hidden />
                                    <input asp-for="Nome" class="form-control" id="NomeVariante" placeholder="#" />
                                    <label asp-for="Nome" class="h6"></label>
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>
                                <div class="form-floating col-12 mb-3">
                                    <input asp-for="PrincipaisMutacoes" class="form-control" placeholder="#"/>
                                    <label asp-for="PrincipaisMutacoes" class="h6"></label>
                                    <span asp-validation-for="PrincipaisMutacoes" class="text-danger"></span>
                                </div>
                                <div class="form-floating col-12 mb-3">
                                    <input asp-for="Caracteristica" class="form-control" placeholder="#" />
                                    <label asp-for="Caracteristica" class="h6"></label>
                                    <span asp-validation-for="Caracteristica" class="text-danger"></span>
                                </div>
                                <div class="form-floating col-12">
                                    <input type="hidden" asp-for="PaisId" />
                                    <input type="text" class="dropdown-toggle form-control-plaintext form-select" id="dropdownPais" value="@Html.DisplayFor(modelItem => Model.PaisNome)" data-bs-toggle="dropdown" aria-expanded="false" readonly onfocus="LimparPesquisa('#pesquisaPais')" />
                                    <label asp-for="PaisId" class="h6"></label>
                                    <span asp-validation-for="PaisId" class="text-danger"></span>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownPais">
                                        <li>
                                            <div class="input-group">
                                                <span class="input-group-text" id="inputGroupPrepend"><i class="bi bi-search"></i></span>
                                                <input class="form-control" id="pesquisaPais" type="text" onkeyup="FiltrarDropDown(this)" aria-describedby="inputGroupPrepend" />
                                            </div>
                                        </li>
                                        <li>
                                            <ul>
                                                @foreach (Pais pais in (List<Pais>)ViewData["listaPais"])
                                                {
                                                    string sigla = pais.Sigla.ToLower();
                                                    <li class="dropdown-item" data-id="@Html.DisplayFor(modelItem => pais.PaisId)" onclick="AtualizarValorDowpDown(this, '#dropdownPais', '#PaisId')">
                                                        <span class="flag-icon flag-icon-@Html.DisplayFor(modelItem => sigla)"></span>
                                                        @Html.DisplayFor(modelItem => pais.Nome)
                                                        <small class="text-muted">(@Html.DisplayFor(modelItem => pais.PaisId))</small>
                                                    </li>
                                                }
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#" onclick="IncluirAlterarVariante()"><i class="bi bi-save2" style="font-size: 2rem" title="Salvar"></i></a>
                    <a href="#" data-bs-dismiss="modal" onclick="LimparModalVariante()"><i class="bi bi-arrow-left-square" style="font-size: 2rem" title="Cancelar"></i></a>
                </div>
            </div>
        </div>
    </div>
}
